<h1 class="center-header">
    GITHUB ISSUES
</h1>
<p>List of GitHub issues.</p>
<h2 class="center-header">Issues:</h2>

<table>
    <thead>
        <tr>
            <th>Done</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="task-list">
        {{#if viewData.tasks.length }}
        {{#each viewData.tasks}}
        <tr>
            <td>{{this.description}}</td>
        </tr>
        {{/each}}
        {{else}}
        <tr>
            <td>There are no tasks to display.</td>
        </tr>
        {{/if}}
    </tbody>
</table>

<template id="task-template">
    <td>\{{this.description}}</td>
</template>